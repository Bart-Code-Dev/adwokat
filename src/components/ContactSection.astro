---
import adwokatBanner from '../assets/Kancelaria-Adwokacka-Ewa-Porycka.jpg';
---

<div class="contact-section">
    <div class="container mx-auto px-6">
        <div class="contact-content">
            <h2 class="contact-title">KONTAKT</h2>
            
            <div class="form-container">
                <form 
                    name="contact" 
                    method="POST" 
                    data-netlify="true" 
                    netlify-honeypot="bot-field"
                    class="contact-form"
                >
                    <p class="hidden">
                        <label>
                            Nie wypełniaj tego jeśli jesteś człowiekiem: <input name="bot-field" />
                        </label>
                    </p>
                    
                    <input type="hidden" name="form-name" value="contact" />
                    
                    <div class="form-group">
                        <label for="name">Imię i nazwisko <span class="required">*</span></label>
                        <input 
                            type="text" 
                            name="name" 
                            id="name" 
                            required 
                            placeholder="Wpisz swoje imię i nazwisko"
                        />
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email <span class="required">*</span></label>
                        <input 
                            type="email" 
                            name="email" 
                            id="email" 
                            required 
                            placeholder="Wpisz swój adres email"
                        />
                    </div>
                    
                    <div class="form-group">
                        <label for="phone">Telefon</label>
                        <input 
                            type="tel" 
                            name="phone" 
                            id="phone" 
                            placeholder="Wpisz swój numer telefonu"
                        />
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Wiadomość <span class="required">*</span></label>
                        <textarea 
                            name="message" 
                            id="message" 
                            required 
                            rows="4" 
                            placeholder="Opisz swoją sprawę"
                        ></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="submit-button">Wyślij wiadomość</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<footer class="site-footer">
    <div class="container mx-auto px-6">
        <p class="copyright">© 2025 Kancelaria Adwokacka Ewa Porycka</p>
    </div>
</footer>

<style>
.contact-section {
    position: relative;
    background-color: #111111;
    background-image: url(../assets/Kancelaria-Adwokacka-Ewa-Porycka.jpg);
    background-size: cover;
    background-position: center;
    background-attachment: scroll;
    padding: 4rem 1.5rem;
}

.contact-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000000;
    opacity: 0.85;
    z-index: 1;
}

.container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
}

.contact-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0;
    letter-spacing: 0.05em;
    border-bottom: 2px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 0.75rem;
    text-align: left;
}

.contact-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

/* Form Styles */
.form-container {
    margin-top: 0;
    width: 100%;
    max-width: 600px;
    margin-left: 0;
    margin-right: auto;
}

.contact-form {
    background-color: rgba(0, 0, 0, 0.6);
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: #ffffff;
    font-weight: 500;
}

.required {
    color: #b1976b;
    margin-left: 4px;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 12px 16px;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    color: #ffffff;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    background-color: rgba(255, 255, 255, 0.15);
    border-color: rgb(217, 159, 59);
    outline: none;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.submit-button {
    background-color: #b1976b;
    color: #000000;
    border: none;
    padding: 12px 24px;
    border-radius: 4px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
}

.submit-button:hover {
    background-color: rgb(232, 179, 85);
    transform: translateY(-2px);
}

.hidden {
    display: none;
}

/* Footer Styles */
.site-footer {
    background-color: #ffffff;
    padding: 20px 0;
    text-align: center;
}

.copyright {
    color: #333333;
    font-size: 0.9rem;
}

/* Media queries */
@media (max-width: 768px) {
    .contact-form {
        padding: 30px 0;
    }
    
    .form-container {
        width: 100%;
    }
}
</style>
